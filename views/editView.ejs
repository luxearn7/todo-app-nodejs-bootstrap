<h2>Edit task</h2>
<%- include('components/errorMessage.ejs') %>
<form method="POST" action="/task/edit/<%= task.id %>?_method=PUT">
    <input class="text-input" type="text" name="task" value="<%= task.task %>">
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-danger" href="/task">Cancel</a>
</form>